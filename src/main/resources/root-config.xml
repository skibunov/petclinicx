<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="idParser" class="by.gsu.petclinicx.repository.common.IdResultSetParser"/>
    <bean id="queryExecutor" class="by.gsu.petclinicx.repository.common.QueryExecutor" init-method="init" destroy-method="destroy">
        <constructor-arg type="by.gsu.petclinicx.repository.common.IdResultSetParser" ref="idParser"/>
    </bean>

    <bean id="diseaseResultSetParser" class="by.gsu.petclinicx.repository.disease.DiseaseResultSetParser"/>
    <bean id="diseaseRepository" class="by.gsu.petclinicx.repository.disease.DiseaseRepository">
        <constructor-arg ref="diseaseResultSetParser"/>
        <constructor-arg ref="queryExecutor"/>
    </bean>

    <bean id="animalResultSetParser" class="by.gsu.petclinicx.repository.animal.AnimalResultSetParser">
        <constructor-arg ref="diseaseRepository"/>
    </bean>
    <bean id="animalRepository" class="by.gsu.petclinicx.repository.animal.AnimalRepository">
        <constructor-arg ref="queryExecutor"/>
        <constructor-arg ref="animalResultSetParser"/>
    </bean>

    <bean id="animalFactory" class="by.gsu.petclinicx.service.AnimalFactory">
        <constructor-arg ref="diseaseRepository"/>
    </bean>

    <bean id="animalMenu" class="by.gsu.petclinicx.service.AnimalMenu">
        <constructor-arg ref="animalFactory"/>
        <constructor-arg ref="animalRepository"/>
    </bean>
</beans>